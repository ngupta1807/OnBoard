<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomTextView">
        <item name="android:fontFamily">@string/font_helvetica_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/pading</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textColorHint">@color/textcolor</item>
        <item name="android:textSize">@dimen/size</item>
    </style>

    <style name="CustomEditText">
        <item name="android:fontFamily">@string/font_helvetica_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/pading</item>
        <item name="android:padding">@dimen/pading</item>
        <item name="android:textSize">@dimen/size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="CustomHeaderText">
        <item name="android:fontFamily">@string/font_helvetica_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/pading</item>
        <item name="android:textSize">@dimen/size</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:fontFamily">@string/font_helvetica_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/pading</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textSize">@dimen/size</item>
        <item name="android:buttonTint">@color/textcolor</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="android:button">@android:color/transparent</item>-->
    </style>

    <style name="CustomButton">
        <item name="android:fontFamily">@string/font_helvetica_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/btn_size</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_margin">@dimen/pading</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="CustomtwiceButton">
        <item name="android:fontFamily">@string/font_helvetica_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/btn_size</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
