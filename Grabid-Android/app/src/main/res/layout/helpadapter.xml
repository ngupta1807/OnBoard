<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.grabid.views.SemiBoldTextView
        android:id="@+id/categorytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp" />

    <com.grabid.views.SemiBoldTextView
        android:id="@+id/categoryvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/category_arrow_left"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_seprator" />
</LinearLayout><!--android:drawableRight="@drawable/list_arrow"-->