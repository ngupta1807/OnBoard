<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/gradientDrawble"
    >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- android:color="@color/blue" -->
            <corners android:radius="8dp"/>
        </shape>

    </item>

    <item
            android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/strock_clr"/> <!-- android:color="@color/blue" -->
            <corners android:radius="4dp"/>
        </shape>

    </item>
    <item
            android:id="@+id/gradientDrawbleall"
            android:left="3dp"
            android:top="0.5dp" android:right="0.5dp"
            android:bottom="0.5dp"
    >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="4.5dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>



</layer-list>
