<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:background="@drawable/box_bg"
               android:paddingTop="0dp"
               android:paddingLeft="7dp"
               android:paddingRight="7dp"
               android:paddingBottom="5dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_centerInParent="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="6dp"
    android:id="@+id/item_image"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
            android:id="@+id/item_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/icon_tm"
            android:textColor="@android:color/black"
            android:textSize="26sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/setting"
                android:textColor="@android:color/black"
                android:textSize="26sp"/>
    <TextView
            android:id="@+id/txt_tip"
            style="@style/CustomBoldTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIP"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/btn_size"
            />


    <RelativeLayout
            android:layout_below="@+id/txt_tip"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="16dp"
            android:background="@drawable/profile_picture_frame"
            android:id="@+id/text_corner"
    >
        <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:tag="yellow"
                android:text="2"
                style="@style/CustomBoldTextView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="26sp"/>

    </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PER SWIPE"
                android:layout_below="@+id/text_corner"
                style="@style/CustomBoldTextView"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/btn_size"
                android:textColor="@android:color/black"
                />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_bg_wave"
           android:layout_alignParentBottom="true"
    >

        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="horizontal"
                      android:gravity="center_horizontal"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    style="@style/CustomBoldTextView"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Scan."
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    style="@style/CustomBoldTextView"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blacki"
                    android:text="Swipe."
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CustomBoldTextView"
                    android:gravity="center_horizontal"
                    android:textColor="@color/nav_text"
                    android:layout_height="wrap_content"
                    android:text="Tip."
            />
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>




