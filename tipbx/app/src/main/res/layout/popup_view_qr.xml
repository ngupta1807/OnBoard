<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
              android:orientation="vertical"
android:id="@+id/popup_lay"
              android:background="@drawable/zd_rounded"
              android:padding="20dp"
>
    <ImageView
            android:id="@+id/close"
            android:background="@drawable/close_btn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:clickable="true"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                    android:text="Scan to tip me"
              android:textColor="@color/blacki"
              style="@style/CustomTextView"
    android:layout_gravity="center"
    />
    <ImageView
            android:id="@+id/qr_code"
            android:layout_margin="20dp"
            android:layout_width="300dp" android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
    />
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

        <TextView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:clickable="true"
                style="@style/CustomBoldHalvaticaTextView"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="@drawable/share_icon"
                android:layout_height="30dp"
                android:text=""/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/popup_logo"
        />
        <TextView
                android:id="@+id/download"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_width="30dp"
                style="@style/CustomBoldHalvaticaTextView"
                android:background="@drawable/download_icon"
                android:layout_height="30dp"
                android:text=""/>


    </RelativeLayout>
</LinearLayout>
