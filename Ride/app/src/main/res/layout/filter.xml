<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bookmyride.views.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Reset"
            android:textColor="@color/driver_color"
            android:textSize="@dimen/input_size" />

        <com.bookmyride.views.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Filters"
            android:textColor="@color/reg_colors"
            android:textSize="@dimen/input_size" />

        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/cross" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/driver_color" />

    <RelativeLayout
        android:id="@+id/lay_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bookmyride.views.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="DATE:"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size" />

            <com.bookmyride.views.RegularTextView
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select start date"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black" />

            <com.bookmyride.views.RegularTextView
                android:id="@+id/end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select end date"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black" />

            <com.bookmyride.views.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="ADDRESS:"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size" />

            <com.bookmyride.views.RegularEditText
                android:id="@+id/pu_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select pick up address"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size" />

            <com.bookmyride.views.RegularEditText
                android:id="@+id/do_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select drop off address"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size" />

            <com.bookmyride.views.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="TIME:"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size"
                android:visibility="gone" />

            <com.bookmyride.views.RegularTextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select time"
                android:padding="10dp"
                android:textColor="@color/reg_colors"
                android:textSize="@dimen/input_size"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:visibility="gone" />

            <com.bookmyride.views.BoldTextView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_red_ride"
                android:gravity="center"
                android:padding="10dp"
                android:text="SEARCH"
                android:textColor="@color/white"
                android:textSize="@dimen/input_size" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>