<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.bookmyride.views.LightTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />

            <com.bookmyride.views.RegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Complete the registration details to register as a passenger on BookMyRide."
                android:textColor="@color/white"
                android:textSize="@dimen/btn_size"
                android:visibility="visible" />

            <com.bookmyride.views.BoldTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:hint="FIRST NAME"
                    android:inputType="textCapWords|textCapSentences"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <com.bookmyride.views.BoldTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:hint="LAST NAME"
                    android:inputType="textCapWords|textCapSentences"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <com.bookmyride.views.BoldTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:hint="USERNAME"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <com.bookmyride.views.BoldTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:hint="EMAIL ADDRESS"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <com.bookmyride.views.BoldTextInputLayout
                android:id="@+id/il_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <com.bookmyride.views.BoldTextInputLayout
                android:id="@+id/il_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:hint="CONFIRM PASSWORD"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bookmyride.views.BoldTextInputLayout
                    android:id="@+id/lay_dial"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/hint_colors">

                    <com.bookmyride.views.RegularEditText
                        android:id="@+id/dial_code"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg"
                        android:clickable="false"
                        android:drawableRight="@drawable/dropdown_arrow"
                        android:focusable="false"
                        android:hint="CODE"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_colors"
                        android:textSize="@dimen/input_size" />
                </com.bookmyride.views.BoldTextInputLayout>

                <com.bookmyride.views.BoldTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/lay_dial"
                    android:textColorHint="@color/hint_colors">

                    <com.bookmyride.views.RegularEditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="MOBILE NUMBER"
                        android:inputType="phone"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_colors"
                        android:textSize="@dimen/input_size" />
                </com.bookmyride.views.BoldTextInputLayout>

                <RelativeLayout
                    android:id="@+id/phone_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.bookmyride.views.BoldTextView
                android:id="@+id/send_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="GET OTP "
                android:textColor="@color/driver_color"
                android:textSize="@dimen/input_size" />

            <com.bookmyride.views.BoldTextInputLayout
                android:id="@+id/il_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="OTP"
                    android:inputType="numberPassword"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <com.bookmyride.views.BoldTextView
                android:id="@+id/verify_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:text="VERIFY OTP "
                android:textColor="@color/blue"
                android:textSize="@dimen/input_size"
                android:visibility="gone" />

            <com.bookmyride.views.BoldTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_colors">

                <com.bookmyride.views.RegularEditText
                    android:id="@+id/referral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="REFERRAL CODE(OPTIONAL)"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_colors"
                    android:textSize="@dimen/input_size" />
            </com.bookmyride.views.BoldTextInputLayout>

            <com.bookmyride.views.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="PROFILE IMAGE"
                android:textColor="@color/white"
                android:textSize="@dimen/input_size" />

            <com.bookmyride.views.RegularTextView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_curve_white"
                android:gravity="center"
                android:padding="8dp"
                android:text="Choose Image"
                android:textColor="#1e1e1e"
                android:textSize="@dimen/input_size" />

            <RelativeLayout
                android:id="@+id/lay_proflie_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

                <com.bookmyride.util.RoundedImageView
                    android:id="@+id/img_profile"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:tag="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/img_profile"
                    android:layout_marginBottom="20dp"
                    android:layout_toLeftOf="@+id/edit_img_profile"
                    android:background="@android:color/white" />

                <ImageView
                    android:id="@+id/edit_img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_profile"
                    android:layout_alignRight="@+id/img_profile"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="0dp"
                    android:padding="10dp"
                    android:src="@android:drawable/ic_menu_edit" />

                <com.bookmyride.views.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/img_profile" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:orientation="horizontal">

                <com.bookmyride.views.RegularCheck
                    android:id="@+id/accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/check_box_white"
                    android:checked="false"
                    android:text=" I accept BookMyRide "
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_size" />

                <com.bookmyride.views.RegularTextView
                    android:id="@+id/btn_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="0dp"
                    android:text="@string/terms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_size" />
            </LinearLayout>

            <com.bookmyride.views.RegularTextView
                android:id="@+id/submit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_red"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.bookmyride.views.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>