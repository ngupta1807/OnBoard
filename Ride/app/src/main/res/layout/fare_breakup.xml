<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout_signinpage"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/title_color">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onBack"
            android:src="@drawable/back_arrow"
            android:visibility="gone" />

        <com.bookmyride.views.BoldTextView
            android:id="@+id/signin_header_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/fare_breakup"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fare_breakup_bottom_layout"
        android:layout_below="@+id/relativeLayout_signinpage"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

                <com.bookmyride.views.BoldTextView
                    android:id="@+id/ride_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="RIDE_ID:"
                    android:textColor="@color/driver_color"
                    android:textSize="@dimen/input_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dotted_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dotted_line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pickup_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.bookmyride.views.BoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="Pick Up Location"
                                android:textColor="@color/hint_colors"
                                android:textSize="@dimen/btn_size" />

                            <com.bookmyride.views.RegularTextView
                                android:id="@+id/pickup_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/hint_colors" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:src="@drawable/dropoff_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.bookmyride.views.BoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="Drop Off Location"
                                android:textColor="@color/yellow_color"
                                android:textSize="@dimen/btn_size" />

                            <com.bookmyride.views.RegularTextView
                                android:id="@+id/do_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dotted_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <com.bookmyride.views.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/l_view"
                    android:text="Driver Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/btn_size" />

                <com.bookmyride.views.RegularTextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/l_view"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/btn_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <com.bookmyride.views.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:text="Car Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/btn_size" />

                <com.bookmyride.views.RegularTextView
                    android:id="@+id/car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/btn_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.bookmyride.views.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Car Number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/btn_size" />

                <com.bookmyride.views.RegularTextView
                    android:id="@+id/car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/btn_size" />
            </RelativeLayout>

            <View
                android:id="@+id/d_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dotted_line" />

            <LinearLayout
                android:id="@+id/lay_ddw"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.bookmyride.views.RegularTextView
                        android:id="@+id/text_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:text="Ride Distance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/btn_size"
                        android:visibility="visible" />

                    <com.bookmyride.views.BoldTextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/btn_size"
                        android:visibility="visible" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/dotted_line_horizontal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.bookmyride.views.RegularTextView
                        android:id="@+id/text_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:text="Duration"
                        android:textColor="@color/black"
                        android:textSize="@dimen/btn_size"
                        android:visibility="visible" />

                    <com.bookmyride.views.BoldTextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/btn_size"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dotted_line" />

            <LinearLayout
                android:id="@+id/lay_spa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.bookmyride.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:text="Actual Fare"
                            android:textColor="@color/black"
                            android:textSize="@dimen/btn_size"
                            android:visibility="visible" />

                        <com.bookmyride.views.BoldTextView
                            android:id="@+id/fare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/btn_size"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/dotted_line_horizontal" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <com.bookmyride.views.RegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:text="Processing Fee"
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size"
                                android:visibility="visible" />

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/process_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/dotted_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_ww"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.bookmyride.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:text="Waiting Time"
                            android:textColor="@color/black"
                            android:textSize="@dimen/btn_size"
                            android:visibility="visible" />

                        <com.bookmyride.views.BoldTextView
                            android:id="@+id/waiting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/btn_size"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_subtotal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/dotted_line_horizontal" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <com.bookmyride.views.RegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:text="Waiting Charges"
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size"
                                android:visibility="visible" />

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/wait_charges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/dotted_line" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff">

                <RelativeLayout
                    android:id="@+id/fare_breakup_subtotal_main_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/fare_breakup_subtotal_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/fare_breakup_subtotal_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="10dp"
                                android:text="@string/subtotal"
                                android:textColor="@color/reg_colors"
                                android:textSize="@dimen/btn_size" />

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_discount"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.bookmyride.views.BoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="10dp"
                                android:text="Discount"
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/lay_wallet_used"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:visibility="gone">

                            <com.bookmyride.views.BoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center|left"
                                android:text="Wallet Amount Used"
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/wallet_used"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center|left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/lay_paid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp">

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/paid_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center|left"
                                android:text="Paid Amount"
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/total_paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center|left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/btn_size" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <com.bookmyride.views.BoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="10dp"
                                android:text="Total Fare (GST included)"
                                android:textColor="@color/driver_color"
                                android:textSize="@dimen/input_size"
                                android:textStyle="bold" />

                            <com.bookmyride.views.BoldTextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/driver_color"
                                android:textSize="@dimen/input_size"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fare_breakup_tip_amount_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.bookmyride.views.RegularTextView
                                    android:id="@+id/fare_breakup_tip_amount_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:paddingRight="5dp"
                                    android:text="@string/tips"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/input_size" />

                                <com.bookmyride.views.RegularTextView
                                    android:id="@+id/tip_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/input_size" />

                                <LinearLayout
                                    android:id="@+id/lay_remove_tip"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/minus_icon" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fare_breakup_tip_top_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fare_breakup_subtotal_main_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                    <View
                        android:id="@+id/fare_breakup_view3"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#918e8e" />

                    <com.bookmyride.views.RegularCheck
                        android:id="@+id/fare_breakup_tip_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/fare_breakup_view3"
                        android:layout_marginTop="10dp"
                        android:button="@drawable/check_box_black"
                        android:gravity="center"
                        android:text="@string/tip_amount_message"
                        android:textColor="@color/reg_colors"
                        android:textSize="@dimen/input_size"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/fare_breakup_tip_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/fare_breakup_tip_checkBox"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">


                        <com.bookmyride.views.RegularEditText
                            android:id="@+id/tip"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/edittext_border_grey_background"
                            android:digits="0123456789."
                            android:hint="@string/tip_amount"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:textColor="#3f3e3e"
                            android:textColorHint="#918e8e"
                            android:textCursorDrawable="@drawable/edittext_cursor_color"
                            android:textSize="@dimen/input_size" />

                        <com.bookmyride.views.RegularTextView
                            android:id="@+id/apply"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@+id/tip"
                            android:background="#76CDE1"
                            android:gravity="center"
                            android:text="@string/apply"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/input_size" />

                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/fare_breakup_tip_top_layout"
                    android:layout_marginTop="10dp"
                    android:background="#918e8e" />

                <RelativeLayout
                    android:id="@+id/lay_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:visibility="gone">

                    <com.bookmyride.views.RegularTextView
                        android:id="@+id/txt_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Your wallet amount: "
                        android:textColor="@color/reg_colors"
                        android:textSize="@dimen/input_size" />

                    <com.bookmyride.views.BoldTextView
                        android:id="@+id/wallet_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/txt_wallet"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/reg_colors"
                        android:textSize="@dimen/input_size" />
                </RelativeLayout>

                <com.bookmyride.views.RegularCheck
                    android:id="@+id/use_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lay_wallet"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:button="@drawable/check_box_black"
                    android:gravity="center"
                    android:text="@string/use_wallet"
                    android:textColor="@color/reg_colors"
                    android:textSize="@dimen/input_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.bookmyride.views.BoldTextView
                    android:id="@+id/payable_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/use_wallet"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/reg_colors"
                    android:textSize="@dimen/input_size"
                    android:visibility="gone" />

                <com.bookmyride.views.BoldTextView
                    android:id="@+id/balanced_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/payable_amount"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/reg_colors"
                    android:textSize="@dimen/input_size"
                    android:visibility="gone" />

                <com.bookmyride.views.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/balanced_amount"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.bookmyride.views.BoldTextView
        android:id="@+id/accept_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#006400"
        android:gravity="center"
        android:text="CLOSE"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/input_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fare_breakup_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#006400"
        android:visibility="visible">

        <com.bookmyride.views.BoldTextView
            android:id="@+id/pay_by_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pay via Card"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/input_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:id="@+id/estimateride_bottom_view1"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:visibility="visible" />

        <com.bookmyride.views.BoldTextView
            android:id="@+id/check_staus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Check Status"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/input_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.bookmyride.views.BoldTextView
            android:id="@+id/pay_by_paypal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pay_by_paypal"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/input_size"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.bookmyride.views.BoldTextView
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="#ffffff"
            android:textSize="@dimen/input_size"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>